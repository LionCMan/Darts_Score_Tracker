<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary dark theme color of the app (sets color of status bar) -->
        <item name="colorPrimaryDark">@color/colorButtonDarkGreen</item>
    </style>

    <style name="scoreBoardLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>

    </style>

    <style name="simpleLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="player1ScoreLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="dividerLine">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="player2ScoreLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="bottomLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="buttonLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_above">@+id/bottomLine</item>
        <item name="android:layout_below">@+id/calValLine</item>
    </style>

    <style name="calWeightTwo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="calWeightThree">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="playerTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="playerLine">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">@dimen/playerLine</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="playerScore">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:text">@string/startingScore</item>
        <item name="android:textSize">@dimen/largeText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="dartScore">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLength">2</item>
    </style>

    <style name="scoreLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="calculatorValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/zero</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/mediumText</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxLength">3</item>
        <item name="android:paddingTop">@dimen/padding</item>
    </style>

    <style name="simpleLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="smallButtons">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="smallButtonsRed">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:backgroundTint">@color/colorDartRed</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="smallButtonsGreen">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:backgroundTint">@color/colorButtonDarkGreen</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="mediumButtonsRed">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/colorDartRed</item>
    </style>

    <style name="mediumButtonsGreen">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/colorButtonDarkGreen</item>
    </style>

    <style name="bottomButtonRed">
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:backgroundTint">@color/colorDartRed</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="bottomButtonGreen">
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/colorButtonDarkGreen</item>
    </style>

    <style name="bottomLine">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">@dimen/bottomLine</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:layout_above">@id/bottomButtons</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
    </style>

    <style name="blankText">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:paddingTop">@dimen/padding</item>
    </style>
</resources>
